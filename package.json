{
  "name": "ai-chat-app",
  "version": "1.0.0",
  "description": "Full-stack AI chat interface with multiple LLM support",
  "scripts": {
    "start": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "start:detached": "npm run backend:dev & npm run frontend:dev",
    "stop": "pkill -f \"node.*backend\" && pkill -f \"react-scripts\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:install": "cd backend && npm install",
    "frontend:dev": "cd frontend && npm start",
    "frontend:install": "cd frontend && npm install",
    "frontend:build": "cd frontend && npm run build",
    "install:all": "npm install && npm run backend:install && npm run frontend:install",
    "build": "npm run frontend:build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ai",
    "chat",
    "llm",
    "openai",
    "claude",
    "react",
    "express"
  ],
  "author": "AI Chat Interface",
  "license": "MIT",
  "dependencies": {
    "npm": "^11.5.2"
  }
}
